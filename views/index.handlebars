<div class="container">

    <div class="jumbotron">
        <h1>Eat da Burger </h1>

        <br>
        <h2>Select a Burger</h2>
        <panel>
            <form class="create-form" action="/api/burgers/html" method="POST">
                <div class="form-group">
                    <label for="newburger">Order Fresh Burger</label>
                    {{!-- <input type="text" id="newburger" name="burger"> --}}
                    {{!-- <select data-placeholder="" id="newburger" name="burger">
                        <option value="Nothing Selected" selected>Please Select a Sandwich</option>
                        <option value="Hamburger">Hamburger</option>
                        <option value="CheeseBurger">CheeseBurger</option>
                  
                        <option value="VeggieBurger">Veggie Burger</option>
                      
                    </select> --}}
                    <input type="text" id="burger" name="burger_name" placeholder="Please add a burger to devour." />
                    <input type="hidden" name="devoured" value="0">

                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Burgers not devoured</strong>
                    {{!-- <p>Send order to cashier when ready for pick up</p> --}}
                </div>
                <div class="panel-body">

                    <ul> 
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-check"></span></button>

                        <form action="/api/burgers/html/{{this.id}}" method="post">
                            <input type="hidden" name="devoured" value="1">
                            <input type="submit" value="Eat">
                        </form>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Burgers that were devoured </strong>

                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        
                        <form action="/api/burgers/html/del/{{this.id}}" method="post">
                            <input type="submit" value="Eat">
                        </form>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>